datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  projects  Project[]
  roles     String[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Project {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  startDate   DateTime
  updatedAt   DateTime @updatedAt
}